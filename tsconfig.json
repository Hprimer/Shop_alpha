{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true, // Разрешить использование JS-файлов
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true, // Включить строгую проверку типов
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true, // Не генерировать JS-файлы (Webpack/Babel сделают это)
    "jsx": "react-jsx", // Поддержка JSX
    "react": ["./node_modules/@types/react"]
  },
  "include": ["src"] // Укажите папку с исходным кодом
}
